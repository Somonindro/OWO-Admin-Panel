<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >

            <ImageView
                android:id="@+id/shop_logo"
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:src="@drawable/home4"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                />

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHOP NAME"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="35sp"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:id="@+id/register_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register Date"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/shopkeeper_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shopkeeper's Name"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/shopkeeper_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shopkeeper's id"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/shopkeeper_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shopkeeper's Address"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>