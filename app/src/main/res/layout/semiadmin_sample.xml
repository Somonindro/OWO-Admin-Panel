<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/semi_admin_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Phone number"
                android:textSize="20sp"
                android:textColor="#0026FF"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/ethnocentric"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Add Products  :"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ethnocentric"
                    />

                <TextView
                    android:id="@+id/add_product_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes"
                    android:textColor="#0026FF"
                    android:fontFamily="@font/ethnocentric"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Approve Shop  :"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ethnocentric"
                    />

                <TextView
                    android:id="@+id/approve_shop_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes"
                    android:textColor="#0026FF"
                    android:fontFamily="@font/ethnocentric"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Create Offers  :"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ethnocentric"
                    />

                <TextView
                    android:id="@+id/create_offers_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes"
                    android:textColor="#0026FF"
                    android:fontFamily="@font/ethnocentric"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Maintain Shop  :"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ethnocentric"
                    />

                <TextView
                    android:id="@+id/maintain_shop_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes"
                    android:textColor="#0026FF"
                    android:fontFamily="@font/ethnocentric"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Maintain User  :"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ethnocentric"
                    />

                <TextView
                    android:id="@+id/maintain_users_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes"
                    android:textColor="#0026FF"
                    android:fontFamily="@font/ethnocentric"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Messaging  :"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ethnocentric"
                    />

                <TextView
                    android:id="@+id/messaging_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes"
                    android:textColor="#0026FF"
                    android:fontFamily="@font/ethnocentric"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Update Product:"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/ethnocentric"
                    />

                <TextView
                    android:id="@+id/update_products_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yes"
                    android:textColor="#0026FF"
                    android:fontFamily="@font/ethnocentric"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>