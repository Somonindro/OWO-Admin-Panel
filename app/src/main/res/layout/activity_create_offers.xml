<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateOffersActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:id="@+id/back_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24_white"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE OFFERS"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/ethnocentric"
            />
    </androidx.appcompat.widget.Toolbar>




    <ImageView
        android:id="@+id/create_offers_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/offers"
        android:background="@drawable/edittext_design"
        />

    <EditText
        android:id="@+id/offer_name"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:hint="Offer Title"
        android:background="@drawable/edittext_design"
        android:textSize="20sp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        >

        <EditText
            android:id="@+id/offer_start_date"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Start date (DD:MM:YYYY)"
            android:background="@drawable/edittext_design"
            android:textSize="20sp"
            android:inputType="date"
            />

        <ImageView
            android:id="@+id/start_date_picker"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_date_range_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/offer_start_date"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        >

        <EditText
            android:id="@+id/offer_end_date"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="End date (DD:MM:YYYY) "
            android:background="@drawable/edittext_design"
            android:textSize="20sp"
            android:inputType="date"
            />


        <ImageView
            android:id="@+id/end_date_picker"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_date_range_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/offer_end_date"
            />

    </RelativeLayout>




    <Button
        android:id="@+id/create_offer_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Offer"
        android:textAllCaps="false"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttons_blue"
        android:textStyle="italic|bold"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        />


</LinearLayout>