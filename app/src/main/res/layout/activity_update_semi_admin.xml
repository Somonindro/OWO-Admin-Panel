<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateSemiAdminActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEMI ADMIN"
                android:textStyle="bold|italic"
                android:textSize="30sp"
                android:textColor="@android:color/holo_red_light"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Name:  "
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/clicked_admin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABCD"
                    android:textSize="24sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="Pin:  "
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/clicked_admin_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ROLES"
                android:textStyle="bold|italic"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="1.  Approve Shop"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold|italic"
                    />

                <Switch
                    android:id="@+id/clicked_approve_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                >

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="2.  Maintain Shop"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold|italic"
                    />

                <Switch
                    android:id="@+id/clicked_maintain_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                >

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="3.  Add Products"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold|italic"
                    />

                <Switch
                    android:id="@+id/clicked_add_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                >

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="4.  Update Products"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold|italic"
                    />

                <Switch
                    android:id="@+id/clicked_update_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                >

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="5.  Create Offers"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold|italic"
                    />

                <Switch
                    android:id="@+id/clicked_create_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                >

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="6.  Maintain Users"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold|italic"
                    />

                <Switch
                    android:id="@+id/clicked_maintain_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="7.  Messaging"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold|italic"
                    />

                <Switch
                    android:id="@+id/clicked_messaging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/black"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/update_admin_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update admin"
                android:textAllCaps="false"
                android:layout_margin="25dp"
                android:padding="5dp"
                android:background="@drawable/buttons_red"
                android:textStyle="italic|bold"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>