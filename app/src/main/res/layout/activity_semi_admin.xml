<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SemiAdminActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEMI ADMINS"
        android:gravity="center"
        android:textColor="#0026FF"
        android:fontFamily="@font/ethnocentric"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:background="#9251B6F4"
        />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <include layout="@layout/dummy_semi_admin_shimmer"/>
            <include layout="@layout/dummy_semi_admin_shimmer"/>
            <include layout="@layout/dummy_semi_admin_shimmer"/>
            <include layout="@layout/dummy_semi_admin_shimmer"/>
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/semi_admin_recyclerviewid"/>

</LinearLayout>