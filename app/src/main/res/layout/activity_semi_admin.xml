<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SemiAdminActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:id="@+id/back_from_semi_admins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24_white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semi Admins"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:fontFamily="@font/ethnocentric"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="56dp"
            />

    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <include layout="@layout/dummy_semi_admin_shimmer"/>
            <include layout="@layout/dummy_semi_admin_shimmer"/>
            <include layout="@layout/dummy_semi_admin_shimmer"/>
            <include layout="@layout/dummy_semi_admin_shimmer"/>
            <include layout="@layout/dummy_semi_admin_shimmer"/>
            <include layout="@layout/dummy_semi_admin_shimmer"/>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/semi_admin_recyclerviewid"/>

</LinearLayout>