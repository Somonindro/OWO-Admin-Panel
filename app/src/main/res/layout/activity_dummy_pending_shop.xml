<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DummyPendingShopActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shop_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/home3"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop Name:"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop Address:"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/shop_service_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop Service Mobile:"
                android:inputType="number"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/shop_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop-owner Name:"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/shop_owner_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop-owner Mobile:"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/shop_owner_nid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/home3"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/shop_trade_licence"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/home3"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                />

            <Switch
                android:id="@+id/shop_availability_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <Button
                android:id="@+id/create_shop_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Shop"
                android:fontFamily="@font/ethnocentric"
                android:textColor="@android:color/white"
                android:background="@drawable/buttons_blue"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_margin="5dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>